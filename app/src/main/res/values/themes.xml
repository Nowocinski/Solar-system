<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SolarSystem" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_color_primary</item>
        <item name="colorPrimaryDark">@color/custom_color_primary_dark</item>
        <item name="colorAccent">@color/custom_color_accent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SolarSystem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SolarSystem.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SolarSystem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>